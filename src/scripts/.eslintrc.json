{
    "extends": [
        "../../.eslintrc.json",
        "plugin:compat/recommended"
    ],
    "env": {
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-irregular-whitespace": ["error", { "skipTemplates": true }]
    },
    "settings": {
        "polyfills": [
            "Promise",
            "URL"
        ]
    }
}
